<UserControl x:Class="Branta.Features.WalletDashboard.WalletDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:walletVerification="clr-namespace:Branta.Features.WalletVerification"
             xmlns:clipboardGuardian="clr-namespace:Branta.Features.ClipboardGuardian"
             xmlns:installerVerification="clr-namespace:Branta.Features.InstallerVerification"
             xmlns:walletdashboard="clr-namespace:Branta.Features.WalletDashboard"
             d:DataContext="{d:DesignInstance Type=walletdashboard:WalletDashboardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>

        <walletVerification:WalletVerificationView DataContext="{Binding WalletVerificationViewModel}" />

        <installerVerification:InstallerVerificationView Grid.Row="2"
                                                         DataContext="{Binding InstallerVerificationViewModel}" />
    </Grid>
</UserControl>
